{
  "name": "option-vaults",
  "version": "1.0.0",
  "type": "module",
  "devDependencies": {
    "@nomicfoundation/hardhat-ignition": "^3.0.3",
    "@nomicfoundation/hardhat-toolbox-mocha-ethers": "^3.0.0",
    "@types/chai": "^4.3.20",
    "@types/chai-as-promised": "^8.0.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.18.12",
    "chai": "^5.3.3",
    "ethers": "^6.15.0",
    "forge-std": "github:foundry-rs/forge-std#v1.9.4",
    "hardhat": "^3.0.8",
    "mocha": "^11.7.4",
    "prettier": "^3.6.2",
    "prettier-plugin-solidity": "^2.1.0",
    "typescript": "~5.8.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "dotenv": "^17.2.3"
  },
  "scripts": {
    "format": "prettier --write . && npm run format:py",
    "format:check": "prettier --check . && npm run format:check:py",
    "format:sol": "prettier --write \"contracts/**/*.sol\"",
    "format:ts": "prettier --write \"test/**/*.ts\" \"scripts/**/*.ts\" \"hardhat.config.ts\"",
    "format:py": "cd py && python -m black .",
    "format:check:py": "cd py && python -m black --check .",
    "deploy:sepolia": "npx hardhat run scripts/deploy-sepolia.ts --network sepolia",
    "verify:sepolia": "npx hardhat run scripts/verify-sepolia.ts --network sepolia",
    "test:sepolia": "npx hardhat run scripts/test-sepolia.ts --network sepolia",
    "generate:account": "npx hardhat run scripts/generate-account.ts"
  }
}
